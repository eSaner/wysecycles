        <link rel="apple-touch-icon" href="/assets/images/Wyse_Cycles_Logo_Favicon.png">
        <meta name="msapplication-TileImage" content="/assets/images/Wyse_Cycles_Logo_Favicon.png">
    </head>
    <body class="{{ title | slugify }}">

        {{ content | safe }}

        {% if title == "Home" %}
        <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/js/splide.min.js"></script>
        <script>
            document.addEventListener( 'DOMContentLoaded', function() {
                var splide = new Splide('.splide', {
                    type: 'loop',
                    //autoplay: true,
                });
                splide.mount();
            } );
        </script>
        {% endif %}
        <script>
            document.addEventListener( 'DOMContentLoaded', function() {
                let navToggle       = document.getElementById('navToggle');
                let navToggleStyle  = window.getComputedStyle(navToggle, null);
                let primaryNav      = document.getElementById('primaryNav');
                let navLinks        = primaryNav.querySelectorAll('a');
                if (navToggleStyle.getPropertyValue('display') == 'block') {
                    primaryNav.setAttribute('aria-hidden', 'true');
                    navLinks.forEach((link) => {
                        link.setAttribute('tabindex', '-1');
                    });
                }

                navToggle.addEventListener('click', function() {
                    var ariaHidden = primaryNav.getAttribute('aria-hidden');

                    document.body.classList.toggle('nav-open');

                    if (ariaHidden == 'true') {
                        primaryNav.setAttribute('aria-hidden', 'false');
                        navLinks.forEach((link) => {
                            link.removeAttribute('tabindex');
                        });
                    } else {
                        primaryNav.setAttribute('aria-hidden', 'true');
                        navLinks.forEach((link) => {
                            link.setAttribute('tabindex', '-1');
                        });
                    }
                })
            });
        </script>
    </body>
</html>
