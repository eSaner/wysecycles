        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="Wyse Cycles | A mobile bicycle repair shop in Harrisonburg, Virginia.">
        <meta name="twitter:description" content="A mobile bicycle repair shop in Harrisonburg, Virginia.">
        <meta name="twitter:image" content="/assets/images/logo.png">
